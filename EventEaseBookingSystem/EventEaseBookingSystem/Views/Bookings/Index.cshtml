@model IEnumerable<EventEaseBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="SearchString">Search by Event or Venue:</label>
            <input type="text" class="form-control" id="SearchString" name="SearchString" value="@ViewData["SearchString"]" />
        </div>
        <div class="form-group col-md-3">
            <label for="StartDate">Start Date:</label>
            <input type="date" class="form-control" id="StartDate" name="StartDate" value="@ViewData["StartDate"]" />
        </div>
        <div class="form-group col-md-3">
            <label for="EndDate">End Date:</label>
            <input type="date" class="form-control" id="EndDate" name="EndDate" value="@ViewData["EndDate"]" />
        </div>
        <div class="form-group col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Clear</a>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Booking Date</th>
            <th>Event Name</th>
            <th>Venue Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>@item.Event?.EventName</td>
                <td>@item.Venue?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
